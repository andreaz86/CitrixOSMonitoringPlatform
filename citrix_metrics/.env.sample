# Citrix Cloud API credentials
CITRIX_CLIENT_ID=your_client_id
CITRIX_CLIENT_SECRET=your_client_secret
CITRIX_CUSTOMER_ID=your_customer_id
CITRIX_API_BASE_URL=https://api.cloud.com

# InfluxDB configuration
INFLUXDB_TOKEN=your_influxdb_token
INFLUXDB_ORG=citrix
INFLUXDB_BUCKET=citrix_metrics
INFLUXDB_ADMIN_USER=admin
INFLUXDB_ADMIN_PASSWORD=adminpassword
INFLUXDB_RETENTION=30d

# PostgreSQL configuration
POSTGRES_DB=citrix
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# Collection intervals (in seconds)
METRICS_COLLECTION_INTERVAL=300  # 5 minutes
CONFIG_COLLECTION_INTERVAL=3600  # 1 hour

# Retry configuration
MAX_RETRIES=3
RETRY_BACKOFF_FACTOR=0.5
RETRY_MAX_WAIT=30

# Grafana configuration
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin